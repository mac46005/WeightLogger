<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeightLogger_UI.MVVM.Views.WeightLogsPage"
             Title="WeightLogsPage">

    <AbsoluteLayout>
        <Border
            
            >
            <Button Text="add new label"/>
        </Border>
        <ScrollView>
            <ListView>
                <ListView.Header>
                    <Grid ColumnDefinitions="*,*,*,*,*">
                        <Label
                        Grid.Column="0"
                        Text="Date"/>
                        <Label
                        Grid.Column="1"
                        Text="Weight"/>
                        <Label
                        Grid.Column="2"
                        Text="Workout"/>
                        <Label
                        Grid.Column="3"
                        Text="Overeat"/>
                        <Label
                        Grid.Column="4"
                        Text="Memo"/>
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>

                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>
    </AbsoluteLayout>
</ContentPage>